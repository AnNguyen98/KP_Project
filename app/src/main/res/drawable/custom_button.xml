<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size android:width="200dp" android:height="45dp"/>
            <padding android:top="5dp" android:bottom="5dp" android:right="5dp" android:left="5dp"/>
            <gradient android:endColor="@color/yellow" android:centerColor="@color/aqua" android:startColor="@color/red"/>
            <corners android:radius="5dp" />
            <stroke android:color="@color/aqua" android:width="2dp" android:dashWidth="1dp"/>
        </shape>
    </item>
    <item android:drawable="@drawable/button_press" android:state_pressed="true"/>
</selector>